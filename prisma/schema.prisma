
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) @map("id")
  username String
  password String
  email String @unique
  createdAt DateTime @default(now())
  posts Post[]
}

model Post {
  id String @id @default(uuid()) @map("id")
  title String
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User  @relation(fields: [userId],references: [id])
  userId String
}